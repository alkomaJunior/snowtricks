<!-- Header mobile -->
<div class="header_mobile">
    <div class="content_wrap">
        <div class="menu_button icon-menu"></div>
        <!-- Logo -->
        <div class="logo">
            <a href="{{ path('home') }}">
                <img src="{{ asset('build/mounthood/images/logo.png') }}" class="logo_main" alt="">
            </a>
        </div>
    </div>
    <div class="side_wrap">
        <div class="close">Close</div>
        <div class="panel_top">
            <nav class="menu_main_nav_area">
                <!-- Mobile Menu -->
                <ul id="menu_mobile" class="menu_main_nav">
                    <!-- Menu: Home -->
                    <li class="menu-item {{ homeActiveClass ?? "" }}">
                        <a href="{{ path('home') }}"><span> {{ 'Home'|trans }}</span></a>
                    </li>
                    <!-- /Menu: Home -->
                    <!-- Menu: Group -->
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN') %}
                        <li class="menu-item {{ groupActiveClass ?? "" }}">
                            <a href="{{ path('group_index') }}"><span> {{ 'Group'|trans }}</span></a>
                        </li>
                    {% endif %}
                    <!-- /Menu: Group -->
                    <!-- Menu: My Tricks -->
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="menu-item {{ myTricksActiveClass ?? "" }}">
                            <a href="{{ path('myTricks') }}"><span>Tricks</span></a>
                        </li>
                    {% endif %}
                    <!-- /Menu: My Tricks -->
                    <!-- Menu: Sign in and tricks when user is logged in -->
                    <li class="menu-item {{ signInActiveClass ?? "" }} {{ profileActiveClass ?? "" }}">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('user_show', {'slug': app.user.slug}) }}"><span> {{ 'Profile'|trans }}</span></a>
                        {% else %}
                            <a href="{{ path('app_login') }}"><span> {{ 'Sign in'|trans }}</span></a>
                        {% endif %}
                    </li>
                    <!-- /Menu: Sign in tricks when user is logged in -->
                    <!-- Menu: Sign up logout when user is logged in -->
                    <li class="menu-item {{ signUpActiveClass ?? "" }}">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('app_logout') }}"><span> {{ 'Logout'|trans }}</span></a>
                        {% else %}
                            <a href="{{ path('user_sign_up') }}"><span> {{ 'Sign up'|trans }}</span></a>
                        {% endif %}
                    </li>
                    <!-- /Menu: Sign up logout when user is logged in -->
                </ul>
                <!-- /Mobile Menu -->
            </nav>
        </div>
        <div class="panel_bottom"></div>
    </div>
    <div class="mask"></div>
</div>
<!-- /Header mobile -->
