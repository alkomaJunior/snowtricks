{% extends 'layouts/_base.html.twig' %}

{% block title %}{{ 'Sign in'|trans }}{% endblock %}

{% block body %}

    {{ include('layouts/partials/_navbarDesktop.html.twig', {'signInActiveClass': 'current-menu-item'}) }}
    {{ include('layouts/partials/_navbarMobile.html.twig', {'signInActiveClass': 'current-menu-item'}) }}

    <!-- Page content wrap -->
    <div class="page_content_wrap page_paddings_no">
        <!-- Content -->
        <div class="content">
            <article class="post_item post_item_single page">
                <section class="post_content">
                    <div class="content_wrap mt-5">
                        <div class="w-100">
                            <div class="sc_services sc_services_style_services-3 sc_services_type_icons title_center width_100_per" id="tricksList">
                                <h2 class="sc_services_title sc_item_title sc_item_title_with_descr"> {{ 'Sign in'|trans }}</h2>
                                <div class="sc_services_descr sc_item_descr" style="margin-bottom: -1%;">{{ 'Please enter your login and password'|trans }}</div>
                            </div>
                        </div>
                    </div>
                    {% if error %}
                        <div class="container" style="padding-top: 4%;">
                            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        </div>
                    {% endif %}
                    <!-- Login form -->
                    <div class="content_wrap" style="padding-bottom: 7%; padding-top: 3%;">
                        <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_6">
                            <div class="column-1_6 sc_column_item sc_column_item_1 odd first"></div>
                            <div class="column-4_6 sc_column_item sc_column_item_2 even span_4" style="border: #1b1b1b solid 2px;">
                                <div id="sc_form_2_wrap" class="sc_form_wrap">
                                    <div id="sc_form_2" class="text-center sc_form_style_form_1 margin_top_small margin_bottom_large">
                                        <form class="sc_input_hover_default needs-validation" method="post" novalidate>

                                            {# {% if app.user %}
                                                <div class="mb-3">
                                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                                </div>
                                            {% endif %} #}

                                            <div class="sc_form_info">
                                                <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_2">
                                                    <div class="sc_form_item sc_form_field label_over column-1_1 p-3">
                                                        <label for="inputEmail" class="h5 pb-2">{{ 'Username'|trans }}</label>
                                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="fatima.elb@gmail.com" required autofocus />
                                                        <div class="invalid-feedback">
                                                            <span class="d-block">
                                                                <span class="form-error-icon badge badge-danger text-uppercase">{{ 'Error'|trans }}</span> <span class="form-error-message">{{ 'This field is missing'|trans|upper~" "~"And/or"|trans|upper~" "~'This field is not a valid email address'|trans|upper }}</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="sc_form_item sc_form_field label_over column-1_1 p-3">
                                                        <label for="inputPassword" class="h5 pb-2">{{ 'Password'|trans }}</label>
                                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="*****" required>
                                                        <div class="invalid-feedback">
                                                            <span class="d-block">
                                                                <span class="form-error-icon badge badge-danger text-uppercase">{{ 'Error'|trans }}</span> <span class="form-error-message">{{ 'This field is missing'|trans|upper }}</span>
                                                            </span>
                                                        </div>
                                                        <input type="hidden" name="_csrf_token"
                                                               value="{{ csrf_token('authenticate') }}"
                                                        >
                                                        {#
                                                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                                        See https://symfony.com/doc/current/security/remember_me.html
                                                        <div class="checkbox mb-3">
                                                            <label>
                                                                <input type="checkbox" name="_remember_me"> Remember me
                                                            </label>
                                                        </div>
                                                        #}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="sc_form_item sc_form_button pt-3" style="margin-bottom: -15%">
                                                <button class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed icon-right-small" type="submit">{{ 'Sign in'|trans }}</button>
                                                <div class="pt-3 text-center">
                                                    <a href={{ path('app_forgot_password_request') }}>{{ 'Forgot Password?'|trans }}</a>
                                                </div>
                                            </div>
                                            <div class="result sc_infobox"></div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /login form -->
                </section>
            </article>
        </div>
        <!-- /Content -->
    </div>
    <!-- /Page content wrap -->

    {{ include('layouts/partials/_bootstrapJs.html.twig') }}
    {{ include('security/_loginFormValidation.html.twig') }}

{% endblock %}
