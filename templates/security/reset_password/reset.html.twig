{% extends 'layouts/_base.html.twig' %}

{% block title %}{{ 'Reset your password'|trans }}{% endblock %}

{% block body %}

    {{ include('layouts/partials/_navbarDesktop.html.twig', {'signInActiveClass': 'current-menu-item'}) }}
    {{ include('layouts/partials/_navbarMobile.html.twig', {'signInActiveClass': 'current-menu-item'}) }}



    <!-- Page content wrap -->
    <div class="page_content_wrap page_paddings_no">
        <!-- Content -->
        <div class="content">
            <article class="post_item post_item_single page">
                <section class="post_content">
                    <div class="content_wrap mt-5">
                        <div class="w-100">
                            <div class="sc_services sc_services_style_services-3 sc_services_type_icons title_center width_100_per" id="tricksList">
                                <h2 class="sc_services_title sc_item_title sc_item_title_with_descr"> {{ 'Reset your password'|trans }}</h2>
                                <div class="sc_services_descr sc_item_descr" style="margin-bottom: -1%;">{{ 'Please enter your new password'|trans }}.</div>
                            </div>
                        </div>
                    </div>

                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}

                    <!-- Reset password form -->
                    <div class="content_wrap" style="padding-bottom: 7%; padding-top: 3%;">
                        <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_6">
                            <div class="column-1_6 sc_column_item sc_column_item_1 odd first"></div>
                            <div class="column-4_6 sc_column_item sc_column_item_2 even span_4" style="border: #1b1b1b solid 2px;">
                                <div id="sc_form_2_wrap" class="sc_form_wrap">
                                    <div id="sc_form_2" class="text-center sc_form_style_form_1 margin_top_small margin_bottom_large">
                                        {{ form_start(resetForm, {'attr': {'class':'sc_input_hover_default'}}) }}
                                            <div class="sc_form_info">
                                                <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_2">
                                                    <div class="sc_form_item sc_form_field label_over column-1_1 p-3">
                                                        {{ form_label(resetForm.plainPassword.first, ''|trans, {'label_attr': {'class': 'h5 pb-2'}}) }}
                                                        {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': '********', 'autofocus': 'true'}}) }}
                                                    </div>
                                                </div>
                                                <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_2">
                                                    <div class="sc_form_item sc_form_field label_over column-1_1 p-3">
                                                        {{ form_label(resetForm.plainPassword.second, ''|trans, {'label_attr': {'class': 'h5 pb-2'}}) }}
                                                        {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': '********'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="sc_form_item sc_form_button pt-3" style="margin-bottom: -15%">
                                                <button class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed icon-circle-dot" type="submit" formnovalidate>{{ 'Send password reset email'|trans }}</button>
                                            </div>
                                            <div class="result sc_infobox"></div>
                                        {{ form_end(resetForm) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Reset password form -->
                </section>
            </article>
        </div>
        <!-- /Content -->
    </div>
    <!-- /Page content wrap -->

{% endblock %}


