<!-- Modal -->
<div class="modal fade" id="dangerModalMedia{{ img.id }}" tabindex="-1" aria-labelledby="MediaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="MediaLabel">{{ 'Deletion confirmation'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                {{ 'Are you sure'|trans }} ??
            </div>
            <div class="modal-footer">
                <form method="post" action="{{ path('media_delete', {'slug': img.slug}) }}" name="delete{{ img.slug }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ img.slug) }}">
                    <a type="button" class="btn btn-danger text-white"
                       onclick='document.forms.namedItem("delete{{ img.slug }}").submit();'>{{ 'Delete'|trans }}</a>
                </form>
            </div>
        </div>
    </div>
</div>
