{{ form_start(form) }}
<style>
    input::placeholder, textarea::placeholder, select, option{
        font-family: "Montserrat", sans-serif;
    }
</style>

<div class="sc_form_info">
    <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_2">
        <div class="sc_form_item sc_form_field label_over column-1_1 p-3">
            {{ form_label(form.message, 'Message', {'label_attr': {'class': 'h5 pb-2 form-label'}}) }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control p-2', 'placeholder': 'Please enter your message'|trans, 'rows': '6'}}) }}
        </div>
    </div>
</div>
<div class="sc_form_item sc_form_button pt-3 text-center" style="margin-bottom: -15%">
    <button class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed icon-check" type="submit" formnovalidate>{{ Action|default('LEAVE A COMMENT'|trans) }}</button>
</div>
<div class="result sc_infobox"></div>
{{ form_end(form) }}
