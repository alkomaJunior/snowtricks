{% extends 'layouts/_base.html.twig' %}

{% block title %}{{ 'Profile'|trans }}{% endblock %}

{% block body %}

    {{ include('layouts/partials/_navbarDesktop.html.twig', {'profileActiveClass': 'current-menu-item'}) }}
    {{ include('layouts/partials/_navbarMobile.html.twig', {'profileActiveClass': 'current-menu-item'}) }}

    <!-- Page content wrap -->
    <div class="page_content_wrap page_paddings_no">
        <!-- Content -->
        <div class="content">
            <article class="post_item post_item_single page">
                <section class="post_content">
                    <div class="content_wrap mt-5 mb-5">
                        <div class="w-100">
                            <div class="sc_services sc_services_style_services-3 sc_services_type_icons title_center width_100_per" id="tricksList">
                                <h2 class="sc_services_title sc_item_title sc_item_title_with_descr"> {{ user.pseudo }}</h2>
                                <div class="sc_services_descr sc_item_descr" style="margin-bottom: -1%;">
                                    {% if user.avatar != "" %}
                                        <a class="hover_icon hover_icon_view" href="{{ asset('uploads/medias/'~user.avatar)|imagine_filter('avatar') }}">
                                            <img alt="{{ user.pseudo }}" src="{{ asset('uploads/medias/'~user.avatar)|imagine_filter('avatar') }}">
                                        </a>
                                    {% else %}
                                        <a class="hover_icon hover_icon_view" href="{{ asset('build/mounthood/images/team-2-228x228.jpg')|imagine_filter('avatar') }}">
                                            <img alt="{{ user.pseudo }}" src="{{ asset('build/mounthood/images/team-2-228x228.jpg')|imagine_filter('avatar') }}">
                                        </a>
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Profile information -->
                    <div class="container">
                        <div class="text-center">
                            <h6 class="sc_call_to_action_subtitle sc_item_subtitle">{{ user.email }}</h6>
                        </div>
                    </div>
                    <!-- /Profile information -->
                    <div class="text-center mb-5 mt-5">
                        <a href="{{ path('user_edit', {'slug': user.slug}) }}" id="load-more" type="button" class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                            {{ 'Edit my profile'|trans }}
                        </a>
                        <a href="{{ path('user_change_password', {'slug': user.slug}) }}" id="load-more" type="button" class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-key"><path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"></path></svg>
                            {{ 'Change password'|trans }}
                        </a>
                    </div>
                </section>
            </article>
        </div>
        <!-- /Content -->
    </div>
    <!-- /Page content wrap -->

{% endblock %}
