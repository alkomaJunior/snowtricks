{% extends 'layouts/_base.html.twig' %}

{% block body %}

    <style id="my-style">
        .medias{
            display: none;
        }
        .my-button{
            display: block;
        }
        .medias-{
            display: block;
        }
        .my-button-{
            display: none;
        }
    </style>

    {{ include('layouts/partials/_navbarDesktop.html.twig', {'homeActiveClass': 'current-menu-item'}) }}
    {{ include('layouts/partials/_navbarMobile.html.twig', {'homeActiveClass': 'current-menu-item'}) }}
    <!-- Page content wrap -->
    <div class="page_content_wrap page_paddings_yes">
        <div class="content_wrap">
            <!-- Content -->
            <div class="content">
                <!-- Trick description -->
                <article class="post_item post_item_excerpt post_featured_left odd post">
                    <div class="post_content clearfix">
                        <h3 class="post_title">
                            <a>{{ trick.name }}</a>
                        </h3>

                        <div class="post_featured">
                            <div class="post_thumb" data-image="" data-title="Serving Cookies at Alpine Nationals">
                                <a class="img-fluid">
                                    {{ render(url('front_img_', {trickId: trick.id})) }}
                                </a>
                            </div>
                        </div>

                        {{ include('front/trick/_tricksMedia.html.twig') }}

                        <div class="text-center m-5" id="myButton">
                            <button type="button" class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed icon-mobile"
                                    data-toggle="modal" data-target="#tricksMedia">Medias</button>
                            <!-- Modal -->
                            <div class="modal fade" id="tricksMedia" tabindex="-1" aria-labelledby="tricksMediaLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="tricksMediaLabel">MEDIAS</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            {{ include('front/trick/_tricksMedia.html.twig') }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="sc_button sc_button_square sc_button_style_filled sc_button_size_medium sc_button_iconed icon-cancel" data-dismiss="modal"> {{ 'Close'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="post_descr">
                            <p>
                                {{ trick.description }}
                            </p>
                        </div>

                        <div class="post_info text-center">
                            <span class="post_info_item post_info_posted badge badge-primary p-3 mb-1">
                                <a class="text-white">{{ 'Created at'|trans~" "~trick.createdAt|format_datetime('medium', 'short') }}</a>
                            </span>
                            <span class="post_info_posted badge badge-primary p-3 mb-1">
                                <a class="text-white">{{ 'Updated at'|trans~" "~trick.updatedAt|format_datetime('medium', 'short') }}</a>
                            </span>
                            <span class="post_info_posted badge badge-primary p-3 mb-1">
                                <a class="text-white">{{ 'Created by'|trans~" "~trick.user.pseudo }}</a>
                            </span>
                        </div>

                        <div class="post_line_over_author"></div>
                        <!-- Comments form -->
                        <section class="comments_wrap" style="margin-bottom: 20%">
                            <div class="comments_form_wrap">
                                <div class="comments_form">
                                    <div id="respond" class="comment-respond">
                                        <form action="#" method="post" id="commentform" class="comment-form sc_input_hover_default">
                                            <div class="comments_field comments_message">
                                                <textarea id="comment" name="comment" placeholder="Comment" aria-required="true"></textarea>
                                            </div>
                                            <p class="form-submit text-center">
                                                <input name="submit" type="submit" id="send_comment" class="submit" value="Submit">
                                            </p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="post_line_over_author"></div>
                        <!-- /Comments form -->

                        <article class="post_item post_item_single post">
                            <div class="post_line_over_author"></div>
                            <section class="post_author author">
                                <div class="post_author_avatar">
                                    <a href="#">
                                        <img alt="" src="{{ asset('build/mounthood/images/team-2-228x228.jpg') }}">
                                    </a>
                                </div>
                                <div class="post_author_content">
                                    <h6 class="post_author_title">About
                                        <span>
                                            <a href="#" class="fn">Jane Doe</a>
                                        </span>
                                    </h6>
                                    <div class="post_author_info">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                    </div>
                                </div>
                            </section>
                            <div class="post_line_under_author"></div>
                        </article>

                    </div>
                </article>
                <!-- /Trick description -->
            </div>
            <!-- /Content -->
        </div>
    </div>
    <!-- /Page content wrap -->

    <!-- /Body wrap -->
    <div id="page-wrap"></div>

    <script>
        let e1 = document.getElementById('myMedias');
        let e2 = document.getElementById('myButton');
        if (window.matchMedia("all and (max-width: 480px)").matches){
            e1.classList.add("medias");
            e2.classList.add("my-button");
        } else {
            e1.classList.add("medias-");
            e2.classList.add("my-button-");
        }
    </script>

    {{ include('layouts/partials/_bootstrapJs.html.twig') }}

{% endblock %}





