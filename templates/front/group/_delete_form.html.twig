<!-- Modal -->
<div class="modal fade" id="dangerModalGroup{{ group.id }}" tabindex="-1" aria-labelledby="groupLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="groupLabel">{{ 'Deletion confirmation'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                {{ 'Are you sure'|trans }} ??
            </div>
            <div class="modal-footer">
                <form method="post" action="{{ path('group_delete', {'slug': group.slug}) }}" name="delete{{ group.slug }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.slug) }}">
                    <a type="button" class="btn btn-danger text-white"
                       onclick='document.forms.namedItem("delete{{ group.slug }}").submit();'>{{ 'Delete'|trans }}</a>
                </form>
            </div>
        </div>
    </div>
</div>

